{% extends 'base.html.twig' %}

{% block page_content_body %}
    <div class="row">
        <div class="col"></div>
        <div class="col-md-10 col-lg-8">
            <!-- Insert this where you want the table to appear -->
            <div id="brands">Loading...</div>
        </div>
        <div class="col"></div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {{ encore_entry_link_tags('datatables') }}
{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('datatables') }}
{% endblock javascripts %}

{% block javascripts_inline %}
    <script src="{{ asset('bundles/datatables/js/datatables.js') }}"></script>
    <script>
        $(function() {
            $('#brands').initDataTables({{ datatable_settings(datatable) }});
        });
    </script>
{% endblock javascripts_inline %}