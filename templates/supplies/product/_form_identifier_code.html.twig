<div class="js-identifier-code-item">
    <div class="row">
        <div class="col-3">
            {{ form_row(item.type, {'label': false}) }}
        </div>
        <div class="col-7 text-center">
            {{ form_row(item.code, {'label': false, attr:{'class': 'text-right'}}) }}
        </div>
        <div class="col-2">
            <a href="#" class="js-remove-identifier-code btn btn-outline-danger btn-icon-split btn-block form-control">
                <span class="icon text mr-1">
                    <i class="far fa-trash"></i>
                </span>
            </a>
        </div>
    </div>
</div>