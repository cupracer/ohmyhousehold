{% extends 'base.html.twig' %}

{% block page_content_body %}
<div class="row">
    <div class="col"></div>
    <div class="col-md-5 col-lg-4">
        {{ form_start(registrationForm) }}

        <div class="row">
            <div class="col-12">
                {{ form_row(registrationForm.userProfile.forename, {'attr': {'autofocus': 'autofocus'}}) }}
                {{ form_row(registrationForm.userProfile.surname) }}
                {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword) }}
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-right mt-3">
                <button type="submit" class="btn btn-teal text-right">{{ 'app.register'|trans|title }}</button>
            </div>
        </div>
    {{ form_end(registrationForm) }}

    </div>
    <div class="col-md"></div>
</div>
{% endblock page_content_body %}
