{% extends 'base.html.twig' %}

{% block page_content_body %}
    <div class="row">
        <div class="col"></div>
        <div class="col-md-4 col-lg-3">
            <form method="post">
                <div class="row">
                    <div class="col-12">
                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <div class="form-group">
                            <label for="inputUsername">{{ 'form.user.username'|trans|capitalize }}</label>
                            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">{{ 'form.user.password'|trans|capitalize }}</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        {# see https://symfony.com/doc/current/security/remember_me.html #}
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="_remember_me" id="inputRememberMe">
                            <label class="form-check-label" for="inputRememberMe">{{ 'form.user.remember-me'|trans|capitalize }}</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-right mt-3">
                        <button type="submit" class="btn btn-lg btn-teal text-right">{{ 'app.sign-in'|trans|title }}</button>
                    </div>
                </div>
            </form>

        </div>
        <div class="col"></div>
    </div>
{% endblock page_content_body %}
